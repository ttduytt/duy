<script>

    /// cuộn nội dung tương ứng
    var selection
    function scrollToSection(classname){
        selection=document.querySelector(`${classname}`)
        selection.scrollIntoView({behavior:"smooth"})
    }
    

    var listImg= document.querySelectorAll('.slide-image')
    var slide= document.querySelector('.slide-container')
    var avatar= document.querySelector('.avatar')
    const menuchild = document.querySelector('.menu-child-avt')
    let witdh= listImg[0].offsetWidth

    var btleft= document.querySelector('.btn-left')
    var btrigh= document.querySelector('.btn-right')
    var curentIndex=0


    function right (){
    curentIndex++
    if(curentIndex>= listImg.length){
        curentIndex=0
        slide.style.transform=`translateX(${witdh * -1 * curentIndex}px)`
    }else{
        slide.style.transform=`translateX(${witdh * -1 * curentIndex}px)`
    }
    }

    function left (){
    curentIndex--
    if(curentIndex< 0){
        curentIndex=listImg.length-1
        slide.style.transform=`translateX(${witdh *-1 * curentIndex}px)`
    }else{
        slide.style.transform=`translateX(${witdh * -1 * curentIndex}px)`
    }
    }


    btrigh.onclick= function(){
        
        right()
      
    }
    
    btleft.onclick= function (){
       
        left()
       
    }

    avatar.addEventListener('click', function(event){
        if(!menuchild.classList.contains('activeAvt')){
             menuchild.classList.add('activeAvt')
              event.stopPropagation();
        }
       
    })

    document.addEventListener('click', function(){
        if(menuchild.classList.contains('activeAvt')){
              menuchild.classList.remove('activeAvt')
        }
    })

    // kiểm tra quyền nếu là khách
    var HeaderUser= document.getElementById('HeaderUser')
    var authon= `{{authozation}}`
    if(authon){
        HeaderUser.remove();
    }


    // kiểm tra quyền nếu là người dùng đã đăng ký
    var linkBtnMyCourse= document.querySelector('.linkBtnMyCourse')
    const btnPuchare= document.querySelector('.btn-PURCHASE')
    const btnsubriceCourse= document.querySelectorAll('.btn.btn-primary.btnStudyhome.btnsubriceCourse')
    var checkuser= `{{checkuser}}`
    if (checkuser==='user'){
        var idUser= `/{{username._id}}`
        btnsubriceCourse.forEach(function(button){
            button.href= button.href+idUser
        })
        btnPuchare.innerHTML= 'My Course'
        linkBtnMyCourse.href=`/me/couresSubriced/{{username._id}}`
    }




    var btnStudyhome= document.querySelectorAll('.btn.btn-primary.questions')
    var Accesstoken=`{{Accesstoken}}`
        
